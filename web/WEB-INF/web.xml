<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>MaxAllPost</param-name>
        <param-value>3</param-value>
    </context-param>
    <context-param>
        <param-name>MaxNewPost</param-name>
        <param-value>3</param-value>
    </context-param>
    <listener>
        <listener-class>
            LoginListener
        </listener-class>
    </listener>
    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/logowanie</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>Servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>Servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addPostServlet</servlet-name>
        <servlet-class>Servlets.AddPostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>indexPostServlet</servlet-name>
        <servlet-class>Servlets.IndexPostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>postServlet</servlet-name>
        <servlet-class>Servlets.PostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addAnswerServlet</servlet-name>
        <servlet-class>Servlets.AddAnswerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchServlet</servlet-name>
        <servlet-class>Servlets.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>myAnswersServlet</servlet-name>
        <servlet-class>Servlets.UserAnswersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>myPostsServlet</servlet-name>
        <servlet-class>Servlets.UserPostsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gradeAnswerServlet</servlet-name>
        <servlet-class>Servlets.GradeAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/rejestracja</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/logowanie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/wyloguj</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addPostServlet</servlet-name>
        <url-pattern>/dodaj-post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>indexPostServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>postServlet</servlet-name>
        <url-pattern>/pytanie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addAnswerServlet</servlet-name>
        <url-pattern>/dodaj-odpowiedz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchServlet</servlet-name>
        <url-pattern>/szukaj</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>myAnswersServlet</servlet-name>
        <url-pattern>/lista-odpowiedzi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>myPostsServlet</servlet-name>
        <url-pattern>/lista-pytan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gradeAnswerServlet</servlet-name>
        <url-pattern>/ocen</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>